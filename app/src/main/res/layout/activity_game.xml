<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainmenugradient"
    tools:context=".GameActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:id="@+id/settingsRL">
        <!--<EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kostyl"/>-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradientbutton"
            android:id="@+id/startButton"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:onClick="onCliclStart"
            android:text="Начать"
            android:textSize="20dp"
            android:layout_alignTop="@+id/countQuestET"/>
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:inputType="number"
            android:id="@+id/countQuestET"
            android:nextFocusUp="@id/countQuestET"
            android:nextFocusLeft="@id/countQuestET"
            android:background="@drawable/gradientbutton"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:text="15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/countQuestET"
            android:layout_marginBottom="50dp"
            android:textColor="#000000"
            android:text="Количество вопросов"
            android:textSize="25dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gameRL">
    <TextView
        android:id="@+id/tvquestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvsch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="0dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1a"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gradientbutton"
        android:layout_marginTop="352dp"
        android:onClick="onClicl1O" />

    <Button
        android:id="@+id/button2a"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1a"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradientbutton"
        android:onClick="onClicl2O" />

    <Button
        android:id="@+id/button3a"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2a"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradientbutton"
        android:onClick="onClicl3O" />

    <TextView
        android:id="@+id/fails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textColor="#000000"
        android:textSize="25dp" />
    </RelativeLayout>
</RelativeLayout>