<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/tvquestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp" />

    <Button
        android:id="@+id/button1a"
        android:layout_width="236dp"
        android:onClick="onClicl1O"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/button2a"
        android:layout_width="236dp"
        android:onClick="onClicl2O"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1a"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button3a"
        android:layout_width="236dp"
        android:onClick="onClicl3O"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2a"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/fails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="TextView" />
</RelativeLayout>