<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@drawable/mainmenugradient"
    tools:context=".NetworkGameActivity">
    <RelativeLayout
        android:id="@+id/namelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890йцукенгшщзхъфывапролджэячсмитьбюЙЦУКЕНГШЩЗХЪФЫВАПРОЛДЖЭЯЧСМИТЬБЮ"
            android:inputType="textFilter"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:hint="Имя"
            android:id="@+id/nameET"/>
        <Button
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/gradientbutton"
            android:text="Ввести"
            android:layout_alignTop="@id/nameET"
            android:layout_centerInParent="true"
            android:onClick="onClickEnterName"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/networklayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/discover"
            android:layout_marginBottom="200dp"
            android:textSize="25dp"
            android:textColor="#000000"
            android:hint="Имя"
            android:id="@+id/nameTextView"/>
        <Button
            android:id="@+id/register"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/discover"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:background="@drawable/gradientbutton"
            android:onClick="hostGame"
            android:text="Хост" />

        <Button
            android:id="@+id/discover"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/gradientbutton"
            android:onClick="findOpponent"
            android:text="Поиск" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/register"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="70dp"
        android:id="@+id/waitingconnectionlayout">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/connectionbar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginTop="70dp"
            android:id="@+id/connectiontextview"/>

    </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:id="@+id/hostlayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/countQuestET"
            android:layout_marginBottom="50dp"
            android:textColor="#000000"
            android:text="Количество вопросов"
            android:textSize="25dp"
            />
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:inputType="number"
            android:id="@+id/countQuestET"
            android:background="@drawable/gradientbutton"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="15"
            android:layout_alignBottom="@+id/hosttextview"
            android:layout_marginBottom="90dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/hosttextview"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="20dp"
        android:text="Игроков присоеденино: 0"
        android:textColor="#000000"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startButton"
        android:layout_alignTop="@+id/hosttextview"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gradientbutton"
        android:textSize="20dp"
        android:text="Начать"
        android:onClick="onClickStartGame"
        android:textColor="#000000"
        />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancelButton"
            android:layout_alignTop="@+id/startButton"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/gradientbutton"
            android:textSize="20dp"
            android:text="Отмена"
            android:onClick="disconnect"
            android:textColor="#000000"
            />
</RelativeLayout>
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/gamelayout"
        android:visibility="gone">
        <TextView
            android:id="@+id/tvquestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvsch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="0dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button1a"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/gradientbutton"
            android:layout_marginTop="352dp"
            android:onClick="onClicl1O" />

        <Button
            android:id="@+id/button2a"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button1a"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradientbutton"
            android:onClick="onClicl2O" />

        <Button
            android:id="@+id/button3a"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button2a"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradientbutton"
            android:onClick="onClicl3O" />

        <TextView
            android:id="@+id/fails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="TextView" />
        <TextView
            android:id="@+id/timeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textColor="#000000"
            android:textSize="25dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/resultsLayout">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:id="@+id/resultsTV"/>
            </RelativeLayout>
        </ScrollView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:id="@+id/waitotherplayersstoprl">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/idididid"
                android:layout_height="wrap_content"
                android:text="Ожидание других игроков"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp" />
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/idididid"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:text="Место"
                    android:layout_weight="0.27"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:text="Имя"
                    android:layout_weight="0.23"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:text="Ошибки"
                    android:textAlignment="center"
                    android:layout_weight="0.25"/>

                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:text="Время"
                    android:layout_weight="0.25"/>

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/resultsLV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            </LinearLayout>
            <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="disconnect"
                android:textAlignment="center"
            android:text="Прекратить игру"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/gradientbutton"
            android:id="@+id/stopGameBTN"/>
        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:onClick="onClickRestart"
            android:textAlignment="center"
            android:text="Начать заново"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/gradientbutton"
            android:id="@+id/restartBTN"/>

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/changelayout"
        android:visibility="gone">
        <ListView
            android:id="@+id/listViewTests"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/countDownLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="#000000"
            android:id="@+id/whatTestTV"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/countDownTV"
            android:layout_marginBottom="200dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            android:textSize="100dp"
            android:id="@+id/countDownTV"/>

    </RelativeLayout>
</RelativeLayout>